<%= form_for(@event) do |f| %>


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id %><br>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
